<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4F7FFA"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_inside_collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <!-- Add UI components here -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="台北市 中正區"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="2023.11.30 禮拜二"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_location" />

                <ImageView
                    android:id="@+id/img_weather_status"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/sunny"
                    app:layout_constraintEnd_toEndOf="@id/tv_date"
                    app:layout_constraintStart_toStartOf="@id/tv_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_date" />

                <TextView
                    android:id="@+id/tv_degree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="@id/img_weather_status"
                    app:layout_constraintStart_toStartOf="@id/img_weather_status"
                    app:layout_constraintTop_toBottomOf="@id/img_weather_status"
                    tools:text="18º C" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="今天太陽很強呢 記得塗防曬喔！"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_degree" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_last_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="上次更新日期為 13:00"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_tips" />

                <!-- You can add more UI components and set their constraints accordingly -->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--            <androidx.appcompat.widget.Toolbar-->
            <!--                android:id="@+id/toolbar"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="?attr/actionBarSize"-->
            <!--                app:layout_collapseMode="pin"-->
            <!--                app:navigationIcon="?attr/homeAsUpIndicator" />-->

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- The main content area where you put the information after the CollapsingToolbar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_hourly_forecast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/hourly_weather_title"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_hourly_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@id/tv_hourly_forecast_title"
                tools:itemCount="2"
                tools:listitem="@layout/item_weather_per_hour_vh" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_detail_forecast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="詳細資訊"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_hourly_forecast" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_today_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/background_white_radius_12"
                android:backgroundTint="@color/light_gray"
                android:paddingVertical="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_forecast_title">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/cpi_air_quality"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:progress="75"
                    android:rotation="-135"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_aqi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    app:layout_constraintBottom_toBottomOf="@id/cpi_air_quality"
                    app:layout_constraintEnd_toEndOf="@id/cpi_air_quality"
                    app:layout_constraintStart_toStartOf="@id/cpi_air_quality"
                    app:layout_constraintTop_toTopOf="@id/cpi_air_quality" />

                <TextView
                    android:id="@+id/tv_aqi_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="空氣品質：非常好"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_aqi_level_desc"
                    app:layout_constraintStart_toEndOf="@id/cpi_air_quality"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_aqi_level_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="32dp"
                    android:text="你所在地區的空氣質量目前非常好。沒有引起各種疾病的空氣污染。 "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_aqi_level"
                    app:layout_constraintTop_toBottomOf="@id/tv_aqi_level" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.example.skyfysample.widget.customview.CvWeatherDetail
                android:id="@+id/cw_wind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toStartOf="@id/cw_humidity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_today_tips" />

            <com.example.skyfysample.widget.customview.CvWeatherDetail
                android:id="@+id/cw_humidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cw_wind"
                app:layout_constraintTop_toTopOf="@id/cw_wind" />

            <com.example.skyfysample.widget.customview.CvWeatherDetail
                android:id="@+id/cw_uv_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/cw_fog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cw_wind" />

            <com.example.skyfysample.widget.customview.CvWeatherDetail
                android:id="@+id/cw_fog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cw_uv_index"
                app:layout_constraintTop_toTopOf="@id/cw_uv_index" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
